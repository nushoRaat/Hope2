<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiant"
    tools:context=".secondpage">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="97dp"

        app:srcCompat="@drawable/welcome" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="What should we call you?"
        android:inputType="textPersonName"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/phoneText"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
       android:layout_below="@+id/editText"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Your phone number please"
        android:visibility="invisible"
        android:textSize="25dp" />


<Button
    android:id="@+id/verifyButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_below="@+id/phoneText"
    android:layout_marginTop="20dp"
    android:text="Verify"
    android:textSize="20dp"
    android:textStyle="bold"
    android:visibility="invisible"
    android:background="@drawable/custom_button"

    />


    <EditText
        android:id="@+id/emailText"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editText"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Your email number please"

        android:textSize="25dp" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/phoneText"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/custom_button"

        />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/verifyButton"
        android:layout_marginTop="20dp"
        >

        <RadioButton
            android:id="@+id/radio_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:background="@drawable/custom_button"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"

            />

        <RadioButton
            android:id="@+id/radio_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:background="@drawable/custom_button"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"

            />



    </RadioGroup>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ibeeleaf"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"

        />




</RelativeLayout>